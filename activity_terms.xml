<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Terms">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="400dp"
        android:backgroundTint="@color/purple_200"
        android:layout_height="600dp"
        app:cardCornerRadius="80dp"
        android:layout_marginLeft="5dp">

        <TextView
            android:id="@+id/info_text"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:fontFamily="times"
            android:text=" Terms and Condition"
            android:textAlignment="center"
            android:textSize="30dp" />

        <TextView
            android:layout_below="@id/info_text"
            android:layout_width="350dp"
            android:layout_height="400dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="25dp"
            android:background="@color/white"
            app:cardCornerRadius="100dp"
            android:fontFamily="times"
            android:textStyle="bold"
            android:text="            By registering on, accessing, browsing, downloading or using the PayFi Platform for any general purpose or for the specific purpose of availing any PayFi Service, You agree to be bound by the single-sign-on ID (hereinafter SSOID) terms and conditions set forth below as well as by the service-specific terms and conditions applicable to each PayFi Service (hereinafter collectively, the Terms and Conditions). "/>
        <ImageView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginTop="280dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/img_2"
            android:background="@color/purple_200"/>
    </androidx.cardview.widget.CardView>


</LinearLayout>