<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/forgoti"
        android:layout_width="match_parent"
        android:layout_height="328dp"
        android:layout_marginTop="-180dp"
        android:scaleType="centerCrop"
        android:src="@drawable/forgot1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgoti"
        android:orientation="vertical"
        android:layout_margin="@dimen/cardview_default_elevation">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/muliblack"
            android:text="New Credentials"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Email"
        android:layout_marginTop="250dp"
        android:textColor="@color/cardview_dark_background"
        android:fontFamily="@font/muli_semibold"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginLeft="100dp"></TextView>

    <EditText
        android:id="@+id/emailf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="100dp"/>


    <TextView
        android:id="@+id/textpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="350dp"
        android:fontFamily="@font/muli_semibold"
        android:text="New Password"
        android:textColor="@color/cardview_dark_background"
        android:textSize="20dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/passwordf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="95dp"/>

    <TextView
        android:id="@+id/cnfrm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:fontFamily="@font/muli_semibold"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="87dp"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/confrmf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="87dp"/>



    <Button
        android:id="@+id/btnfor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="550dp"
        android:text="Submit" />


</RelativeLayout>